<!DOCTYPE package SYSTEM "../../php4/pear/package.dtd">
<package version="1.0">
  <name>oHR_jobApply</name>
  <summary>
    Online application formular wizard.
  </summary>
  <description>
    The jobApply package can be used for online application formulars. The
    collected data are send via mail.
  </description>
  <license>
    GPL
  </license>
  <maintainers>
    <maintainer>
      <user>cbleek</user>
      <role>lead</role>
      <name>Carsten Bleek</name>
      <email>carsten@bleek.de</email>
    </maintainer>
  </maintainers>
  <release>
    <version>0.0.1</version>
    <state>alpha</state>
    <date>2003-04-20</date>
    <notes>initial release</notes>
    <filelist>
      <dir name="/" baseinstalldir="/OpenHR/jobApply">
        <file role="php">index.php</file>
        <file role="php">formPersonalData.php</file>
        <file role="php">formPersonalData.html</file>
        <file role="php">formEducation.php</file>
        <file role="php">formEducation.html</file>
        <file role="php">formProfessionalExperience.php</file>
        <file role="php">formProfessionalExperience.html</file>
        <file role="php">formQualification.php</file>
        <file role="php">formQualification.html</file>
        <dir name="lib" baseinstalldir="/OpenHR">
          <dir name="Application">
            <file role="php">Client.php</file>
          </dir>
        </dir>
      </dir>
    </filelist>
    <deps>
        <dep type="php" rel="ge" version="4.2.0"/>
        <dep type="pkg" rel="has">oHR_category</dep>
        <dep type="pkg" rel="has">oHR_base</dep>
        <dep type="pkg" rel="has">HTML_QuickForm</dep>
    </deps>
  </release>
</package>